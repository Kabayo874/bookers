<h1>Editing Book</h1>

<div>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <div class="form">
      <label for="book-title">Title</label>
      <%= f.text_field :title, id:"book-title" %>
    </div>

    <div class="form">
      <label for="book-body">Body</label>
      <%= f.text_area :body, id:"book-body" %>
    </div>

    <div>
    <%= f.submit 'Update Book' %>
    </div>
  <% end %>
</div>

<div>
<%= link_to "Show", book_path(@book.id) %>
 | 
<%= link_to "Back", '/books' %>
</div>