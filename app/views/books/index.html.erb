<h1>Books</h1>

<!-- ここから一覧 -->

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      <tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        
          <th><%= book.title %></th>
          <th><%= book.body %></th>
        <th><%= link_to "Show", book_path(book.id) %></th>
        <th><%= link_to "Edit", edit_book_path(book.id) %></th>
        <th><%= link_to "Destroy", book_path(book.id), method: :delete %></th>
      <tr>
      <% end %>
    </tbody>
  </table>


  <!-- ここから下は新規投稿 -->
<h2>New Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="new-book">
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <div class="form">
      <label for="book-title">Title</label>
      <%= f.text_field :title, id:"book-title" %>
    </div>

    <div class="form">
      <label for="book-body">Body</label>
      <%= f.text_area :body, id:"book-body" %>
    </div>

    <div>
    <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>





<!-- labelは読み上げソフトがフォーム入力だと認識してくれる。また要素内の文章をクリックするとフォームへ移動してくれてUIが良い。 -->
<!-- labelにfor=、フォームにid=で紐づける -->
<!-- labelは自動で改行されないからdivなどでブロックを作る -->
